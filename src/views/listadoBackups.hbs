<div class="container-fluid">
    <!-- id="cuerpo" -->
    <a class="btn btn-primary" href="/dumpSQL">dumpSQL</a>
    <h1 class="col-10 mx-auto text-center">LISTADO BACKUPS</h1>
    <div class="row">
        <div class="col-10 mx-auto">

            <table class="table table-bordered table-dark table-hover">
                <tr>
                    <th>Nombre</th>
                    <th>Creado</th>
                    <th>acciones</th>
                </tr>
                {{#if backups}}
                {{#each backups}}
                <tr>
                    <td>
                        <a href="/{{this.name}}" target="_blank"> {{this.name}} </a>
                    </td>
               
                    <td>{{ this.created_at}}</td>
                    <td> <a type="submit" href="/{{this.name}}" class="text-primary"><i
                                class="fa-solid fa-trash"></i>Del</a>
                    </td>
                </tr>
                {{/each}}
                {{else}}
                <tr>No hay ning√∫n backup generado, <a href="/">crea uno</a> !! </tr>
                {{/if}}
            </table>
        </div>
    </div>
</div>